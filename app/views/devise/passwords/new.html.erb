<% provide(:title, "Forgot password")%>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="text-center">
        Forgot your password ?
      </h2>
      <div class="col-md-4 offset-md-4 m-t-50 m-b-100">

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Business Email' %>
          </div>

          <div class="form-group">
            <%= f.submit "Send Reset Instructions", class: 'btn btn-primary btn-block' %>
          </div>
        <% end %>

        <div class="form-group m-t-14">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>