<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-2">
      <h3 class="legend text-center">Edit <%= resource_name.to_s.humanize %> Information</h3>
      <hr class="section-divider">
    </div>
  </div>

  <div class="row">
    <div class="col-md-5 offset-md-2">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put })                do |f| %>

          <%= render 'shared/error_messages', object: f.object %>

          <div class="form-group">
              <%= f.label :business_name %>
              <%= f.text_field :business_name, autofocus: true, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :business_email %>
              <%= f.email_field :email, autofocus: false, class: 'form-control' %>
              <small class="form-text text-muted">You'll use this to login when approved</small>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>


            <div class="form-group">
              <%= f.label :agency_type %>
              <%= f.select :agency_type, options_for_select(agency_type), {prompt: "Select agency type"}, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :phone_numbers %>
              <%= f.telephone_field :phno, autofocus: false, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :business_website %>
              <%= f.text_field :business_website, autofocus: false, class: 'form-control' %>
            </div>

            <h4 class="legend">Location Information</h4>
            <hr class="section-divider">

            <div class="form-group">
              <%= f.label :address %>
              <%= f.text_field :address, autofocus: false, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :city %>
              <%= f.text_field :city, autofocus: false, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :state %>
              <%= f.select :state, options_for_select(nigeria_states), {prompt: "Select state"}, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password %> <small>(leave blank if you don't want to change it)</small><br />
              <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
              <% if @minimum_password_length %>
                <small><%= @minimum_password_length %> characters minimum</small>
              <% end %>
            </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          </div>


            <h4 class="legend">About your business</h4>
            <hr class="section-divider">

            <div class="form-group">
              <%= f.text_area :about, autofocus: false, class: 'form-control', placeholder: "Write something short about your business and the services you render.", maxlength: 300, rows: 7 %>
            </div>

            <hr class="section-divider">

            <div class="form-group">
              <%= f.label :current_password %> 
              <small>(we need your current password to confirm your changes)</small>
              <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
            </div>

          <div class="form-group">
            <%= f.submit "Update Business Details", class: 'btn btn-primary btn-block' %>
          </div>
      <% end %>

        <!-- <h3> Remove this: Cancel my account</h3> -->

        <!-- <p>Unhappy? <%#= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

        <%#= link_to "Back", :back %> -->

    </div>
  </div>

</div>