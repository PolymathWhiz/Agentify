<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Sign up your business</h2>
    </div>
  </div>


  <div class="row">
    <div class="col-md-6">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.label :business_name %><br />
              <%= f.text_field :business_name, autofocus: true, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :business_email %><br />
              <%= f.email_field :email, autofocus: false, class: 'form-control' %>
              <small class="form-text text-muted">You'll use this to login when approved</small>
            </div>

            <div class="form-group">
              <%= f.label :agency_type %><br />
              <%= f.select :agency_type, options_for_select(agency_type), {}, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :phone_numbers %><br />
              <%= f.text_field :phno, autofocus: false, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :address %><br />
              <%= f.text_field :address, autofocus: false, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :city %><br />
              <%= f.text_field :city, autofocus: false, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :state %><br />
               <%= f.select :state, options_for_select(nigeria_states), {}, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :business_website %><br />
              <%= f.email_field :business_website, autofocus: false, class: 'form-control' %>
            </div>

              <div class="form-group">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
                <small class="form-text text-muted">This will be used to log you in when account is confirmed</small>
              </div>

            <div class="form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
            </div>

            <div class="">
              <%= f.submit "Sign up", class: 'btn btn-primary' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
      </div>
  </div>
</div>