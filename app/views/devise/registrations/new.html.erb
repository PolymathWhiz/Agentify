<div class="container">
  <div class="row">
    <div class="col-md-6">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to 'Home', root_path %></li>
        <li class="breadcrumb-item active">Add business</li>
      </ol>
      <h2>Add your business on Agentify</h2> <small>We will make you avaliable to millions of people in less than a minute.</small>
    </div>
  </div>


  <div class="row">
    <div class="col-md-6">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.label :business_name %><br />
              <%= f.text_field :business_name, autofocus: true, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :business_email %><br />
              <%= f.email_field :email, autofocus: false, class: 'form-control' %>
              <small class="form-text text-muted">You'll use this to login when approved</small>
            </div>

            <div class="form-group">
              <%= f.label :agency_type %><br />
              <%= f.select :agency_type, options_for_select(agency_type), {}, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :phone_numbers %><br />
              <%= f.text_field :phno, autofocus: false, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :address %><br />
              <%= f.text_field :address, autofocus: false, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :city %><br />
              <%= f.text_field :city, autofocus: false, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :state %><br />
               <%= f.select :state, options_for_select(nigeria_states), {}, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :business_website %><br />
              <%= f.email_field :business_website, autofocus: false, class: 'form-control' %>
            </div>

              <div class="form-group">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
                <small class="form-text text-muted">This will be used to log in when account is approved</small>
              </div>

            <div class="form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.submit "Sign up", class: 'btn btn-primary' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
      </div>

      <!-- Card -->
      <div class="col-md-4 offset-md-2">
        <div class="card">
          <h5 class="card-header">Frequently Asked Questions</h3>
          <div class="card-block">
            <h4 class="card-title">Special title treatment</h4>
            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
          </div>
        </div>
      </div>
      <!-- End card -->
  </div>
</div>