<% provide(:title, "#{@business.business_name}") %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card w-100">
        <div class="card-block">
          <h4 class="card-title"><%= @business.business_name %></h4> <hr>
          <p><%= @business.agency_type%></p>
          <p class="card-text">
            <p> <small>
              <% if @business.business_website.present? %>
                <a href="<%= @business.business_website %>" target="_blank"> <i class="fa fa-external-link fa-fw"></i> Visit Website</a> <span class="vert-divider">|</span>
              <% end %>


              <a href="mailto:<%= @business.email %>" target="_blank"> <i class="fa fa-envelope fa-fw"></i> Email Business</a> <span class="vert-divider">|</span>

              <i class="fa fa-phone fa-fw"></i> <%= @business.phno %>
            </p>
            </small>

            <p>
              <i class="fa fa-map-marker fa-fw" style="color: black;" aria-hidden="true"></i>
              <%= business_address(@business) %>
            </p>

          </p>
        </div>
      </div>
    </div>
  </div>

  <% if @business.about.present? %>

  <div class="row m-t-14 m-b-100">
    <div class="col-md-12">
      <div class="card w-100">
        <div class="card-block">
          <h4 class="card-title">About <%= @business.business_name %></h4> <hr>
          <p class="card-text">
            <%= @business.about %>
          </p>
          </p>
        </div>
      </div>
    </div>
  </div>
  <% end %>

</div>